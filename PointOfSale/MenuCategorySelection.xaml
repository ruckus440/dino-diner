<Page x:Class="PointOfSale.Selection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Selection">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Margin="40" Click="SelectCombo" Grid.Row="0" Grid.Column="0">Combos</Button>
        <Button Margin="40" Click="SelectEntree" Grid.Row="0" Grid.Column="1">Entrees</Button>
        <Button Margin="40" Click="SelectDrinks" Grid.Row="1" Grid.Column="0">Drinks</Button>
        <Button Margin="40" Click="SelectSides" Grid.Row="1" Grid.Column="1">Sides</Button>
        
    </Grid>
</Page>
