@page
@model Website.Pages.MenuModel
@{
    ViewData["Title"] = "Menu";
}
  
<h1>Menu</h1>
<h2>Combos</h2>
@foreach (var combo in Model.Menu.AvailableCombos)
{
    <div class="menu-item">
        <h3>@combo.ToString(): </h3>
        <p style="margin-left: 40px">
            Price: $@combo.Price<br />
            Calories: @combo.Calories<br />
            Ingredients:
            <ul>
                @foreach (var ingredient in combo.Ingredients)
                {
                    <li style="margin-left: 40px">@ingredient</li>
                }
            </ul>
        </p>
    </div>
}

